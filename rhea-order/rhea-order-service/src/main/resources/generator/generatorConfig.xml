<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="javaFileEncoding" value="UTF-8"/>

        <plugin type="com.rhea.common.plugin.LombokPlugin">
            <property name="ToString" value="true"/>
        </plugin>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.rhea.common.base.BaseMapper"/>
            <property name="caseSensitive" value="true"/>
            <property name="forceAnnotation" value="true"/>
        </plugin>

        <plugin type="tk.mybatis.mapper.generator.TemplateFilePlugin">
            <property name="context" value="com.rhea.order"/>
            <property name="targetProject" value="../rhea-order-api/src/main/java"/>
            <property name="targetPackage" value="${context}.api"/>
            <property name="templatePath" value="template/Service.ftl"/>
            <property name="fileName" value="${tableClass.shortClassName}Service.java"/>
        </plugin>

        <plugin type="tk.mybatis.mapper.generator.TemplateFilePlugin">
            <property name="context" value="com.rhea.order"/>
            <property name="targetProject" value="src/main/java"/>
            <property name="targetPackage" value="${context}.service.impl"/>
            <property name="templatePath" value="template/ServiceImpl.ftl"/>
            <property name="fileName" value="${tableClass.shortClassName}ServiceImpl.java"/>
        </plugin>

        <plugin type="tk.mybatis.mapper.generator.TemplateFilePlugin">
            <property name="context" value="com.rhea.order"/>
            <property name="targetProject" value="../rhea-order-skeleton/src/main/java"/>
            <property name="targetPackage" value="${context}.dubbo"/>
            <property name="templatePath" value="template/Dubbo.ftl"/>
            <property name="fileName" value="${tableClass.shortClassName}Dubbo.java"/>
        </plugin>

        <!--<plugin type="tk.mybatis.mapper.generator.TemplateFilePlugin">-->
        <!--<property name="targetProject" value="src/main/java"/>-->
        <!--<property name="targetPackage" value="com.rhea.order.service.impl"/>-->
        <!--<property name="templatePath" value="template/ServiceImpl.ftl"/>-->
        <!--<property name="fileName" value="${tableClass.shortClassName}ServiceImpl.java"/>-->
        <!--</plugin>-->


        <!-- 数据库连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/torder?useUnicode=true&amp;characterEncoding=utf-8&amp;autoReconnect=true"
                        userId="root"
                        password="root"/>

        <!-- model生成 -->
        <javaModelGenerator targetPackage="com.rhea.order.model" targetProject="../rhea-order-api/src/main/java"/>

        <!-- MapperXML生成 -->
        <sqlMapGenerator targetPackage="com.rhea.order.mapper" targetProject="src/main/resources"/>

        <!-- Mapper接口生成 -->
        <javaClientGenerator targetPackage="com.rhea.order.mapper" targetProject="src/main/java" type="XMLMAPPER"/>

        <table tableName="order_0" domainObjectName="Order"></table>
    </context>
</generatorConfiguration>